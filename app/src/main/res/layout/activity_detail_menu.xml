<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_detailmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Nasi Wagyu"
        android:textSize="25sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageview_detailmenu"
        android:src="@drawable/splash"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"/>

    <TextView
        android:id="@+id/textview_detailprice"
        android:text="Rp. 30.000,-"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"/>

    <TextView
        android:id="@+id/textview_komposisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Komposisi: "/>

    <TextView
        android:id="@+id/textview_isi_komposisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_komposisi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Nasi, Daging Kambing, Telur" />

</RelativeLayout>